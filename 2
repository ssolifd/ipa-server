cat > docker-compose.yml<<-EOF
version: "2"

services:
  web:
    build: .
    container_name: ipa-server
    restart: always
    environment:
      - NODE_ENV=production
      - PUBLIC_URL=https://mail.godoq.com
    ports:
      - "9008:8080"
    volumes:
      - "/docker/data/ipa-server:/app/upload"
  caddy:
    image: ineva/caddy:0.10.3
    restart: always
    network_mode: host
    ports:
      - "443:443"

entrypoint: |
      sh -c 'echo "$$CADDY_CONFIG" > /etc/Caddyfile && /usr/bin/caddy --conf /etc/Caddyfile --log stdout'
    environment:
      CADDY_CONFIG: |
        mail.godoq.com {
          gzip
          tls en@solifd.com
          proxy / localhost:9008
        }
EOF
